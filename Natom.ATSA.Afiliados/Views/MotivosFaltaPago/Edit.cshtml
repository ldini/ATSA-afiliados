@model Natom.ATSA.Afiliados.Models.MotivoFaltaPago

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Motivo de falta de pago</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MotivoFaltaPagoId)

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <div class="col-md-offset-2 col-md-8">
                <input type="button" class="btn btn-danger" value="Cancelar" onclick="location.href='~/MotivosFaltaPago'" />
                &nbsp;
                <input type="button" onclick="Grabar()" value="Grabar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<script src="~/Resources/js/MotivosFaltaPago/edit.min.js"></script>