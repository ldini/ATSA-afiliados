@model IEnumerable<Natom.ATSA.Afiliados.Models.MotivoFaltaPago>

@{
    ViewBag.Title = "Motivos de falta de pago";
}

<h2>Motivos de falta de pago</h2>

<p>
    <a href="~/MotivosFaltaPago/Create" class="btn btn-sm btn-success" style="float:right;">Nuevo</a>
</p>


<br /><br />

<table width="100%" id="tbl" class="table table-condensed">
    <thead>
        <tr>
            <th width="80%">
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.MotivoFaltaPagoId }, new { @class = "btn btn-primary btn-xs" })
                    <a class="btn btn-danger btn-xs" onclick="Eliminar(@item.MotivoFaltaPagoId);">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<script src="~/Resources/js/MotivosFaltaPago/index.min.js"></script>